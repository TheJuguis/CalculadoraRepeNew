<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/ButtonSubtraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="423dp"
        app:layout_constraintTop_toBottomOf="@id/ButtonMultiplication"
        app:layout_constraintLeft_toLeftOf="@id/ButtonMultiplication"
        app:layout_constraintRight_toRightOf="@id/ButtonMultiplication"
        android:backgroundTint="@color/naranjita"/>

    <Button

        android:id="@+id/ButtonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="288dp"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toLeftOf="@id/ButtonDelete"
        android:layout_marginRight="5dp"
        android:backgroundTint="@color/gris"
        />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="291dp"
        android:layout_height="66dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="85dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        />

    <Button
        android:id="@+id/ButtonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEL"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="288dp"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toRightOf="@id/ButtonClear"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toLeftOf="@id/ButtonPercentaje"
        android:layout_marginRight="5dp"
        android:backgroundTint="@color/gris"
        />

    <Button
        android:id="@+id/ButtonPercentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="195dp"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        app:layout_constraintLeft_toRightOf="@id/ButtonDelete"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toLeftOf="@id/ButtonDivision"
        android:backgroundTint="@color/gris"
        />

    <Button
        android:id="@+id/ButtonDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="รท"
        tools:layout_editor_absoluteX="301dp"
        tools:layout_editor_absoluteY="280dp"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/ButtonPercentaje"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/naranjita"/>

    <Button
        android:id="@+id/Button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="375dp"
        app:layout_constraintTop_toBottomOf="@id/ButtonClear"
        app:layout_constraintLeft_toLeftOf="@id/ButtonClear"
        app:layout_constraintRight_toRightOf="@id/ButtonClear"
        android:backgroundTint="@color/gris"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/Button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="373dp"
        app:layout_constraintTop_toBottomOf="@id/ButtonDelete"
        app:layout_constraintLeft_toLeftOf="@id/ButtonDelete"
        app:layout_constraintRight_toRightOf="@id/ButtonDelete"
        android:backgroundTint="@color/gris"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/Button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="362dp"
        app:layout_constraintTop_toBottomOf="@id/ButtonPercentaje"
        app:layout_constraintLeft_toLeftOf="@id/ButtonPercentaje"
        app:layout_constraintRight_toRightOf="@id/ButtonPercentaje"
        android:backgroundTint="@color/gris"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/ButtonMultiplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="360dp"
        app:layout_constraintTop_toBottomOf="@id/ButtonDivision"
        app:layout_constraintLeft_toLeftOf="@id/ButtonDivision"
        app:layout_constraintRight_toRightOf="@id/ButtonDivision"
        android:backgroundTint="@color/naranjita"/>

    <Button
        android:id="@+id/Button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="435dp"
        app:layout_constraintTop_toBottomOf="@id/Button7"
        app:layout_constraintLeft_toLeftOf="@id/Button7"
        app:layout_constraintRight_toRightOf="@id/Button7"
        android:backgroundTint="@color/gris"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/Button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="439dp"
        app:layout_constraintTop_toBottomOf="@id/Button8"
        app:layout_constraintLeft_toLeftOf="@id/Button8"
        app:layout_constraintRight_toRightOf="@id/Button8"
        android:backgroundTint="@color/gris"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/Button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="439dp"
        app:layout_constraintTop_toBottomOf="@id/Button9"
        app:layout_constraintLeft_toLeftOf="@id/Button9"
        app:layout_constraintRight_toRightOf="@id/Button9"
        android:backgroundTint="@color/gris"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/Button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="504dp"
        app:layout_constraintTop_toBottomOf="@id/Button4"
        app:layout_constraintLeft_toLeftOf="@id/Button4"
        app:layout_constraintRight_toRightOf="@id/Button4"
        android:backgroundTint="@color/gris"
        android:onClick="numberButtonClicked"
        />

    <Button
        android:id="@+id/Button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="504dp"
        app:layout_constraintTop_toBottomOf="@id/Button5"
        app:layout_constraintLeft_toLeftOf="@id/Button5"
        app:layout_constraintRight_toRightOf="@id/Button5"
        android:backgroundTint="@color/gris"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/Button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="495dp"
        app:layout_constraintTop_toBottomOf="@id/Button6"
        app:layout_constraintLeft_toLeftOf="@id/Button6"
        app:layout_constraintRight_toRightOf="@id/Button6"
        android:backgroundTint="@color/gris"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/ButtonAddition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        tools:layout_editor_absoluteX="287dp"
        tools:layout_editor_absoluteY="498dp"
        app:layout_constraintTop_toBottomOf="@id/ButtonSubtraction"
        app:layout_constraintLeft_toLeftOf="@id/ButtonSubtraction"
        app:layout_constraintRight_toRightOf="@id/ButtonSubtraction"
        android:backgroundTint="@color/naranjita"/>

    <Button
        android:id="@+id/Button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="562dp"
       app:layout_constraintTop_toBottomOf="@id/Button2"
        app:layout_constraintLeft_toLeftOf="@id/Button2"
        app:layout_constraintRight_toRightOf="@id/Button2"
        android:backgroundTint="@color/gris"
        />

    <Button
        android:id="@+id/ButtonDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="558dp"
       app:layout_constraintLeft_toLeftOf="@id/Button1"

        app:layout_constraintTop_toBottomOf="@id/Button1"
        app:layout_constraintRight_toRightOf="@id/Button1"
        android:backgroundTint="@color/gris"
        android:onClick="numberButtonClicked"/>

    <Button
        android:id="@+id/ButtonEquals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="="
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="570dp"
        app:layout_constraintTop_toBottomOf="@id/Button3"
        app:layout_constraintLeft_toLeftOf="@id/Button3"
        app:layout_constraintRight_toRightOf="@id/ButtonAddition"
        android:backgroundTint="@color/naranjita"
        />
</androidx.constraintlayout.widget.ConstraintLayout>